generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Restaurant {
	id 					String @id @default(uuid())
	name 				String @unique
	email				String @unique
	phone           	Int @unique
	createdAt 			DateTime @default(now())
	updatedAt 			DateTime @updatedAt
	manager_id 			String

	location			Location?
	products 			Products[]
}

model Manager {
	id 					String @id @default(uuid())
	name				String
	phone				Int @unique
	email				String @unique
}

model Products {
	id 					String @id @default(uuid())
	name 				String
	image_url			String
	price 				Float
	description			String
	restaurant_id 		String
	createdAt 			DateTime @default(now())
	updatedAt 			DateTime @updatedAt

	restaurant 			Restaurant @relation(fields: [restaurant_id], references: [id])
	orders 				Order[]
}

model Customer {
	id 					String @id @default(uuid())
	user_name 			String @unique
	password 			String

	orders 				Order[]
	location			Location?
}

model Order {
	id 					String @id @default(uuid())
	product_id 			String
	customer_id 		String
	quant				Int
	createdAt 			DateTime @default(now())
	updatedAt 			DateTime @updatedAt

	product 			Products @relation(fields: [product_id], references: [id])
	customer 			Customer @relation(fields: [customer_id], references: [id])
}

model Location {
	id 					String @id @default(uuid())
	longitude			Float
	latitude 			Float
	customer_id			String? @unique
	restaurant_id		String? @unique

	customer 			Customer? @relation(fields: [customer_id], references: [id])
	restaurant			Restaurant? @relation(fields: [restaurant_id], references: [id])
}